{
  "name": "pampered-paws-server",
  "version": "1.0.0",
  "description": "Pampered Paws Server is a web server with a RESTful API designed to streamline and manage dog grooming appointments, making it easier for customers to schedule, modify, and track their grooming sessions.",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon ./src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "test": "jest --runInBand --no-cache --forceExit",
    "commit": "cz",
    "postinstall": "husky install",
    "prepare": "husky"
  },
  "keywords": [
    "JavaScript",
    "Mongoose",
    "MongoDB",
    "Swagger",
    "Zod",
    "ExpressJS",
    "NodeJS",
    "Eslint",
    "Prettier",
    "Husky",
    "Commitizen",
    "Commitlint",
    "Jest",
    "Supertest"
  ],
  "author": "Patrick Diesta",
  "license": "ISC",
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "commit-msg": "npm run commitlint $1",
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "npm run format",
      "npm run prettier",
      "npm run lint"
    ],
    "**/*.test.js": [
      "npm run test"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "express-jsdoc-swagger": "^1.8.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mailtrap": "^3.4.0",
    "mongodb": "^6.11.0",
    "mongoose": "^8.8.3",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.16.0",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "3.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
